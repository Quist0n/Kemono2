{
  "json.schemas": [
    {
      "fileMatch": [
        "/json-schema/*.schema.json"
      ],
      "url": "/json-schema/_meta.schema.json"
    },
    {
      "fileMatch": [
        "/json-schema/api/*.json"
      ],
      "url": "/json-schema/api.schema.json"
    },
    {
      "fileMatch": [
        "/json-schema/paywalls.json"
      ],
      "url": "/json-schema/paywalls.schema.json"
    },
  ],
  "[json]": {
    "editor.tabSize": 2,
  },
  "[jsonc]": {
    "editor.tabSize": 2,
  },
  "[python]": {
    "editor.tabSize": 4,
  },
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--verbose"
  ],
  "python.formatting.autopep8Args": [],
  "python.sortImports.args": [
    "--multi-line",
    "3"
  ],
  "python.analysis.diagnosticSeverityOverrides": {
    // flake8 already covers it
    "reportUndefinedVariable": "none",
  }
}
